@model ProductAssignmentEntity.Models.Product

<div>
    <hr />
    <a asp-controller="Product" asp-action="Index">Go to Product Index</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2 align="center">Product Entry</h2><hr />
    @*<div class="form-group">
        <label>Product Code</label>
        <input type="text" asp-for="ProductCode" class="form-control" placeholder="Enter Product Code" />
    </div>*@
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="Enter Product Name" />
        @Html.ValidationMessageFor(obj=>obj.ProductName,"",new {@class="text-danger"})
    </div>
    <div class="form-group">
        <label>Product Year</label>
        <input type="number" asp-for="ProductYear" class="form-control" placeholder="Enter Channel Id" required />
    </div>
    <div class="form-group">
        <label>Channel Id</label>
        <input type="number" min="1" max="3" asp-for="ChannelId" class="form-control" placeholder="Enter Channel Id" required />
    </div>
    <div class="form-group">
        <label>Size Scale Id</label>
        <input type="number" asp-for="SizeScaleId" class="form-control" placeholder="Enter Size Scale Id"  />
    </div>
    @*<div class="form-group">
        <label>Create Date</label>
        <input type="datetime-local" asp-for="CreateDate" class="form-control" placeholder="Enter Create Date" required />
    </div>*@
    <div class="form-group">
        <label>Created By</label>
        <input type="text" asp-for="CreatedBy" class="form-control" placeholder="Enter " required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

